        // --- 2. рдСрдЯреЛ-рд╕рдЬреЗрд╢рди рджрд┐рдЦрд╛рдиреЗ рдХрд╛ рдлрд╝рдВрдХреНрд╢рди ---
        function showSuggestions() {
            const inputCode = moharCodeInput.value.trim();
            suggestionsDiv.innerHTML = ''; 

            if (inputCode.length < 1) { 
                suggestionsDiv.style.display = 'none';
                return;
            }

            // рдЗрдирдкреБрдЯ рдХреЛ рд╕рд╛рдорд╛рдиреНрдп рдХрд░реЗрдВ (рдХреЗрд╕-рдЗрдирд╕реЗрдиреНрд╕рд┐рдЯрд┐рд╡ рдореИрдЪрд┐рдВрдЧ рдХреЗ рд▓рд┐рдП)
            const normalizedInput = inputCode.toUpperCase();
            let suggestionsArray = [];

            // рдбреЗрдЯрд╛рдмреЗрд╕ рдореЗрдВ рдХреЛрдб рдЦреЛрдЬреЗрдВ рдЬреЛ рдЗрдирдкреБрдЯ рд╕реЗ рд╢реБрд░реВ рд╣реЛрддрд╛ рд╣реЛ (startsWith)
            for (const key in purityData) {
                if (purityData.hasOwnProperty(key)) {
                    const normalizedKey = key.toUpperCase();
                    
                    // рдЕрдЧрд░ key рдЗрдирдкреБрдЯ рд╕реЗ рд╢реБрд░реВ рд╣реЛрддреА рд╣реИ
                    if (normalizedKey.startsWith(normalizedInput)) {
                        suggestionsArray.push(key);
                    }
                }
            }
            
            // рд╕реБрдЭрд╛рд╡реЛрдВ рдХреЛ DOM рдореЗрдВ рдкреНрд░рджрд░реНрд╢рд┐рдд рдХрд░реЗрдВ
            suggestionsArray.forEach(suggestion => {
                const item = document.createElement('div');
                item.classList.add('suggestion-item');
                item.textContent = suggestion;
                
                // рдХреНрд▓рд┐рдХ рдЗрд╡реЗрдВрдЯ: рдЗрдирдкреБрдЯ рдлреАрд▓реНрдб рднрд░реЗрдВ рдФрд░ рдЬрд╛рдБрдЪ рдХрд░реЗрдВ
                item.onclick = function() {
                    moharCodeInput.value = suggestion;
                    suggestionsDiv.innerHTML = ''; 
                    suggestionsDiv.style.display = 'none';
                    checkPurity(); 
                };
                
                suggestionsDiv.appendChild(item);
            });
            
            // рд╕реБрдЭрд╛рд╡реЛрдВ рдХреЛ рджрд┐рдЦрд╛рдПрдБ рдпрд╛ рдЫреБрдкрд╛рдПрдБ
            if (suggestionsArray.length > 0) {
                 suggestionsDiv.style.display = 'block';
            } else {
                 suggestionsDiv.style.display = 'none';
            }
        }

        // --- 3. рд╢реБрджреНрдзрддрд╛ рдЬрд╛рдБрдЪрдиреЗ рдХрд╛ рдлрд╝рдВрдХреНрд╢рди ---
        function checkPurity() {
            const inputCode = moharCodeInput.value.trim();
            const normalizedInput = inputCode.toUpperCase();
            
            let foundPurity = null;
            let originalKey = null;

            // рдбреЗрдЯрд╛рдмреЗрд╕ рдореЗрдВ рд╣реВрдмрд╣реВ рдХреЛрдб рдЦреЛрдЬреЗрдВ
            for (const key in purityData) {
                if (purityData.hasOwnProperty(key)) {
                    // рд╕реБрдирд┐рд╢реНрдЪрд┐рдд рдХрд░реЗрдВ рдХрд┐ рдпрд╣ рд╣рд┐рдВрджреА рдФрд░ рд╕реНрдкреЗрд╢рд▓ рдХреИрд░реЗрдХреНрдЯрд░ рдХреЗ рд╕рд╛рде рднреА рдХрд╛рдо рдХрд░реЗ
                    const normalizedKey = key.toUpperCase();
                    
                    if (normalizedInput === normalizedKey) {
                        foundPurity = purityData[key];
                        originalKey = key;
                        break; 
                    }
                }
            }

            // рдкрд░рд┐рдгрд╛рдо рджрд┐рдЦрд╛рдирд╛
            resultDiv.classList.remove('error', 'success');
            
            if (foundPurity) {
                // рдХреЛрдб рдорд┐рд▓рд╛
                resultDiv.innerHTML = `тЬЕ рдореЛрд╣рд░ рдХреЛрдб **${originalKey}** рдХреЗ рд▓рд┐рдП рд╢реБрджреНрдзрддрд╛ рд╣реИ: <strong>${foundPurity}</strong>`;
                resultDiv.classList.add('success');
            } else if (inputCode === "") {
                // рдЗрдирдкреБрдЯ рдЦрд╛рд▓реА рд╣реИ
                resultDiv.innerHTML = "рдХреГрдкрдпрд╛ рдЬрд╛рдБрдЪрдиреЗ рдХреЗ рд▓рд┐рдП рдореЛрд╣рд░ рдХреЛрдб рджрд░реНрдЬ рдХрд░реЗрдВред";
                resultDiv.classList.remove('success', 'error');
                resultDiv.style.background = '#f0f4f7';
                resultDiv.style.border = 'none';
            }
            else {
                // рдХреЛрдб рдирд╣реАрдВ рдорд┐рд▓рд╛
                resultDiv.innerHTML = `тЭМ рдХреНрд╖рдорд╛ рдХрд░реЗрдВ, рдореЛрд╣рд░ рдХреЛрдб **${inputCode}** рдбреЗрдЯрд╛рдмреЗрд╕ рдореЗрдВ рдирд╣реАрдВ рдорд┐рд▓рд╛ред`;
                resultDiv.classList.add('error');
            }
            
            // рдЬрд╛рдБрдЪрдиреЗ рдХреЗ рдмрд╛рдж рд╕реБрдЭрд╛рд╡реЛрдВ рдХреЛ рд╕рд╛рдл рдХрд░реЗрдВ
            suggestionsDiv.innerHTML = '';
            suggestionsDiv.style.display = 'none';
        }
        
        // 4. рдХрд┐рд╕реА рднреА рдмрд╛рд╣рд░реА рдХреНрд▓рд┐рдХ рдкрд░ рд╕реБрдЭрд╛рд╡реЛрдВ рдХреЛ рдЫреБрдкрд╛рдиреЗ рдХреЗ рд▓рд┐рдП
        document.addEventListener('click', function(e) {
            if (e.target.id !== 'moharCode' && e.target.className !== 'suggestion-item') {
                suggestionsDiv.innerHTML = '';
                suggestionsDiv.style.display = 'none';
            }
        });
        
        // рдкреНрд░рд╛рд░рдВрднрд┐рдХ рд╕реНрдерд┐рддрд┐ рд╕реЗрдЯ рдХрд░реЗрдВ
        checkPurity(); 
    </script>
</body>
</html>
